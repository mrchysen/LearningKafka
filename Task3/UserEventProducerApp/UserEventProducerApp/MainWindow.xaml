<Window x:Class="UserEventProducerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserEventProducerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition 
                Width="1*" />
            <ColumnDefinition 
                Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="1*" />
            <RowDefinition 
                Height="8*" />
            <RowDefinition
                Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="32"
            FontWeight="Bold">Menu</TextBlock>

        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="32"
            FontWeight="Bold"
            
            x:Name="UserIdTextBlock">
            
        </TextBlock>
        
        <StackPanel
            Grid.Row="1">

            <Button
                Click="Button_Click"
                
                Height="32px"
                Background="BurlyWood"
                Content="Купить" />

            <Button
                Click="Button_Click_1"
                
                Height="32px"
                Background="BurlyWood"
                Content="Сбросить корзину" />

            <Button
                Click="Button_Click_2"
                
                Height="32px"
                Background="BurlyWood"
                Content="Информация" />
        </StackPanel>

        <ScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            
            ScrollChanged="ScrollViewer_ScrollChanged"
            
            VerticalScrollBarVisibility="Auto">

            <StackPanel>
                <Image
                    MouseLeftButtonDown="Image_MouseLeftButtonDown"
                    
                    Tag="1"
                    
                    Width="100"
                    Height="100"
                    Margin="0 10 0 0"
                    Source="/Imgs/1.jpg" />

                <Image
                    MouseLeftButtonDown="Image_MouseLeftButtonDown"
                    
                    Tag="2"
                    
                    Width="100"
                    Height="100"
                    Margin="0 10 0 0"
                    Source="/Imgs/2.jpg" />

                <Image
                    MouseLeftButtonDown="Image_MouseLeftButtonDown"
                    
                    Tag="3"
                    
                    Width="100"
                    Height="100"
                    Margin="0 10 0 0"
                    Source="/Imgs/3.jpg" />

                <Image
                    MouseLeftButtonDown="Image_MouseLeftButtonDown"
                    
                    Tag="4"
                    
                    Width="100"
                    Height="100"
                    Margin="0 10 0 0"
                    Source="/Imgs/1.jpg" />

                <Image
                    MouseLeftButtonDown="Image_MouseLeftButtonDown"
                    
                    Tag="5"
                    
                    Width="100"
                    Height="100"
                    Margin="0 10 0 0"
                    Source="/Imgs/2.jpg" />

                <Image
                    MouseLeftButtonDown="Image_MouseLeftButtonDown"
                    
                    Tag="6"
                    
                    Width="100"
                    Height="100"
                    Margin="0 10 0 0"
                    Source="/Imgs/3.jpg" />
            </StackPanel>

        </ScrollViewer>
    </Grid>
</Window>
